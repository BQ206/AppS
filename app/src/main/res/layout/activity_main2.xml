<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#4a5c66"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/tre">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uif"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:id="@+id/newsim"
            android:background="@drawable/newsic"
            android:layout_alignParentBottom="true"
            >
        </ImageButton>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:id="@+id/butzon"
            android:layout_marginStart="5dp"
            android:background="@drawable/homestc"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/butzyyon">
        </ImageButton>

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:id="@+id/butzyyon"
            android:background="@drawable/stock_im"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/butzyon"
            >
        </ImageButton>




    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_above="@id/uif"
        android:layout_below="@id/tre">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">










            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/sabon"
                android:layout_gravity="center"
                android:scrollHorizontally="false"
                android:text="Nameofstock"
                android:textStyle="bold"
                android:textColor="#bab3b3"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/sel_stck"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/sabon"
                    android:maxLines="100"
                    android:background="@drawable/rounded_rectangle_d"
                    android:text="select"
                    android:layout_marginTop="10dp"
                    tools:ignore="MissingConstraints" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />


                <TextView
                    android:id="@+id/apppri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/sabon"
                    android:text="pricee"
                    android:textColor="#bab3b3"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/appdescr"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="fill_parent"
                    android:background="#36454f"
                    android:textColor="#aaf0d1"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:text="Name" />


            </LinearLayout>

            <TextView
                android:id="@+id/stock_Gr"
                android:fontFamily="@font/montserrat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:scrollHorizontally="false"
                android:layout_gravity="center"
                android:text="Stock Graphs"
                android:textColor="#bab3b3"
                android:textStyle="bold"
                android:textSize="45dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/wk1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="0.5"
                    android:text="1wk"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/mo3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="0.5"
                    android:text="3mo"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/mo6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="0.5"
                    android:text="6mo"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/yr1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="0.5"
                    android:text="1yr"
                    tools:ignore="MissingConstraints" />

                <Button
                    android:id="@+id/yr5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="0.5"
                    android:text="5yr"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>

            <ImageView
                android:id="@+id/cameraImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"/>
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        style="@style/GenericProgressBackground"
        android:id="@+id/progbar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal|center"/>

    <TextView
        android:id="@+id/apprat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="362dp"
        android:layout_marginTop="27dp"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />






</RelativeLayout>